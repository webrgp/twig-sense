{
  "name": "twig-sense",
  "displayName": "Twig Sense",
  "description": "Intelligent Twig 3.x template support for Visual Studio Code",
  "version": "0.1.0",
  "publisher": "twig-sense",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webrgp/twig-sense",
    "directory": "packages/vscode"
  },
  "bugs": {
    "url": "https://github.com/webrgp/twig-sense/issues"
  },
  "homepage": "https://github.com/webrgp/twig-sense#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "twig",
    "template",
    "symfony",
    "php"
  ],
  "activationEvents": [
    "onLanguage:twig"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "vscode.html-language-features"
  ],
  "contributes": {
    "htmlLanguageParticipants": [
      {
        "languageId": "twig",
        "autoInsert": true
      }
    ],
    "languages": [
      {
        "id": "twig",
        "aliases": [
          "Twig",
          "twig"
        ],
        "extensions": [
          ".twig"
        ],
        "configuration": "./languages/twig.configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "twig",
        "path": "./snippets/twig.json"
      }
    ],
    "grammars": [
      {
        "language": "twig",
        "scopeName": "text.html.twig",
        "path": "./syntaxes/twig.tmLanguage.json",
        "embeddedLanguages": {
          "source.css": "css",
          "source.js": "javascript"
        }
      },
      {
        "scopeName": "twig.injection.html",
        "path": "./syntaxes/twig-html-injection.json",
        "injectTo": [
          "text.html.basic",
          "text.html.derivative"
        ]
      }
    ],
    "configuration": {
      "title": "Twig Sense",
      "properties": {
        "twig-sense.semanticTokens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic token highlighting powered by Tree-sitter parsing"
        },
        "twig-sense.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable all diagnostic warnings and errors"
        },
        "twig-sense.diagnostics.inlineComments": {
          "type": "boolean",
          "default": true,
          "description": "Enable warnings for inline comments that may consume closing delimiters"
        },
        "twig-sense.completion.templateRoot": {
          "type": "string",
          "default": "templates",
          "description": "The root directory for template files, relative to the workspace root. Used for resolving template paths in completions."
        },
        "twig-sense.html.semanticHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Enable HTML semantic highlighting in Twig files. Disable if you experience highlighting conflicts."
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.js",
    "dev": "node esbuild.js --watch",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "npm run build",
    "package": "vsce package --no-dependencies",
    "pretest": "tsc -p tsconfig.test.json",
    "test": "vscode-test",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.0.0"
  }
}
